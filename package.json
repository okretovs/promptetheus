{
  "name": "promptetheus",
  "version": "1.0.0",
  "private": true,
  "description": "Lightweight, self-hosted prompt optimization platform",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev -w packages/server\" \"npm run dev -w packages/client\"",
    "build": "npm run build -w packages/client && npm run build -w packages/server",
    "start": "node packages/server/dist/index.js",
    "db:generate": "npm run db:generate -w packages/server",
    "db:migrate": "npm run db:migrate -w packages/server",
    "lint": "eslint packages/*/src --ext .ts,.tsx",
    "test": "vitest",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "author": "",
  "license": "MIT"
}
